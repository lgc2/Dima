@page "/relatorios/resumo-financeiro"
@inherits FinancialSummaryPage

<MudText Typo="Typo.h3">Resumo Financeiro</MudText>

<MudPaper Class="doc-section-component-container my-4 py-4">
    <MudChart ChartType="ChartType.Donut"
              Width="@Width"
              Height="@Height"
              InputData="@Data"
              InputLabels="@Labels">
        <CustomGraphics>
            <text class="donut-inner-text" x="50%" y="35%"
                  dominant-baseline="middle"
                  text-anchor="middle"
                  font-family="Helvetica"
                  font-size="20">Total</text>
            <text class="donut-inner-text" x="50%" y="50%"
                  dominant-baseline="middle"
                  text-anchor="middle"
                  font-family="Helvetica"
                  font-size="30">@Total</text>
        </CustomGraphics>
    </MudChart>
</MudPaper>